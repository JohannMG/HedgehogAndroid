<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".HedgehogStart">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/hedgehogFacts"
        android:id="@+id/textView"
        android:clickable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="hedgehogFactsNextAction"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nextButton"
        android:id="@+id/hedgehogFactsNext"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="hedgehogFactsNextAction"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:id="@+id/hedgehog_click_img"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="false"
        android:contentDescription="hedgehog fact 1"
        android:adjustViewBounds="true"
        android:src="@mipmap/hedgehog1"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fact2"
        android:id="@+id/textView2"
        android:layout_below="@+id/hedgehog_click_img"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zoomImg"
        android:layout_alignTop="@+id/textView2"
        android:src="@mipmap/hedgehog2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        android:minHeight="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fact3"
        android:id="@+id/fact3Text"
        android:layout_below="@+id/zoomImg"
        android:layout_marginTop="26dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hedgehog3Img"
        android:src="@mipmap/hedgehog3"
        android:scaleType="centerCrop"
        android:minHeight="100dp"
        android:layout_alignTop="@+id/fact3Text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/hedgehogFactsNext"
        android:alpha="1" />


</RelativeLayout>
