<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.aaa.national.johannmg.hedgehogandroid.DayNight"
    android:background="#000"
    android:id="@+id/mainDayNightView">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dayNightImage"
        android:layout_alignParentTop="true"
        android:src="@mipmap/moon"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:minHeight="250dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/daynightoptionbtn"
        android:id="@+id/optionsButton"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/dayNightImage"
        android:singleLine="true"
        android:onClick="getOptionsActivity" />
</RelativeLayout>
